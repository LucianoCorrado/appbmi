<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.app.bmi"
    versionCode = "10"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

  <name>App BMI</name>

  <description>
      App per il calcolo del BMI dai il peso in Kg.
      L'altezza in metri, il sesso.
  </description>

  <author email="corrado.luciano@canossamilano.org">
      Luciano Corrado
  </author>
  
  <platform name="android" />
   <icon src="bmi.jpg" platform="android" qualifier="ldpi" ></icon>
   <icon src="bmi.jpg" platform="android" qualifier="mdpi" ></icon>
   <icon src="bmi.jpg" platform="android" qualifier="hdpi" ></icon>
   
   <access origin="*"></access>
   <plugin name=cordova-plugin-whitelist" source="npm" ></plugin>
   <allow-navigation href="*://*getskeleton.com/*" ></allow-navigation>
</widget>
